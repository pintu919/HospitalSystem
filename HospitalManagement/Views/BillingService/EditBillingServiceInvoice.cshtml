                                    <tr>
                                        <td>Total Amount</td>
                                        <td>@Math.Round(subTotal, 2)</td>
                                    </tr>
                                    <tr>
                                        <td>Total Discount</td>
                                        <td>@Math.Round(totaldiscount, 2)</td>
                                    </tr>
                                    <tr class="table-primary">
                                        <th>
                                            Total
                                        </th>
                                        <th>
                                            @Math.Round(subTotal - totaldiscount, 2)
                                        </th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-lg-1 col-md-1"></div>
                </div>
