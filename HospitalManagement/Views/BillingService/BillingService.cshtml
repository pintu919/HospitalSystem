@model HospitalManagement.Models.BillingServiceModel
@{
    /**/

    ViewBag.Title = "BillingService";
}
<style>
    #invSellingCost {
        pointer-events: none;
    }

    #PatientCode {
        pointer-events: none;
    }

    .ui-autocomplete {
        max-height: 250px;
        overflow-y: auto;
        overflow-x: hidden;
    }

    .ui-front {
        z-index: 2000 !important;
    }
