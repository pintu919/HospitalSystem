        function ONbeginEvent() {
            debugger;
           // $("#bnd_referalDoctorName").val($(".bind_referrelname").val());
            if ($("#bnd_patientcode").val() == "" || $("#bnd_patientcode").val() == null) {
                $('#patmsg').removeAttr('hidden');
                return false;
            }
            if ($("#is_realtime").val() == "1") {

                if ($("#ServiceName").val() == null || $("#ServiceName").val() == "") {
