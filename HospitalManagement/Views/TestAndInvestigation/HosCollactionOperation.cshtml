        function addOperation(service_id, investigationmaster_id, appoinment_code, appointmentid, appointmentid1, suplierselect) {
            debugger;
            var Supplierid = $('#tr_id_' + appoinment_code).find('#' + suplierselect).val();

            //Supplierid = $("#Supid").val();
            //if (Supplierid == "") {
            //    Supplierid = $("#price_supplierid").val();
            //}
            $.ajax({
                type: "POST",
                url: "/TestAndInvestigation/AddHosOperation",
                data: '{service_id:"' + service_id + '", InvestigationmasterId:"' + investigationmaster_id + '", AppoinmentCode: "' + appoinment_code + '", supplierid: "' + Supplierid + '" }',
