@model HospitalManagement.Models.TestAndInvestigationModel

@using (Ajax.BeginForm("AddHOSCollection", "TestAndInvestigation", new AjaxOptions { HttpMethod = "POST", OnSuccess = "SuccessMethodcol", LoadingElementId = "progress" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div id="BindOperation">
        <div id="Collection_data" class="modal fade delete-modal" role="dialog" tabindex="-1" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog modal-lg modal-notify modal-info">
                <div class="modal-content">
                    <div class="modal-header skin-bg-gradient">
                        <h4 class="modal-title" style="color:#fff;" id="myModalLabel">Collection Operation</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body with-table text-center">
                        <div class="row">
                            <div class="col-lg-12">
                                <form>
                                    <div class="row">
                                        <div class="col-md-6">

                                            <div class="form-group">



                                                @Html.DisplayFor(model => model.hospitalcollection.testname, new { @id = "testname" })

                                                @Html.HiddenFor(model => model.hospitalcollection.testid, new { @id = "testid" })
                                                @Html.HiddenFor(model => model.hospitalcollection.appointment_code, new { @id = "appointment_code" })
                                                @Html.HiddenFor(model => model.hospitalcollection.appointment_id, new { @id = "appointment_id" })

                                                @*@Html.ValidationMessageFor(model => model.hospitalcollection.testid, "", new { @class = "text-danger" })
        @Html.DropDownListFor(model => model.hospitalcollection.testid, new SelectList(Model.hospitalcollection.testlist, "test_id", "test_name"), "Select Test", new { @class = "form-control select requiredSelect", onchange = "GetDropdownData()", @id = "testinv" })*@

                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group rgentbnd">
                                                <label>Regent Item </label>
                                                @Html.ListBoxFor(model => model.hospitalcollection.regentid, Model.hospitalcollection.Reg_List, new { @class = "listbox", @id = "regent" })
                                                @*@Html.DropDownListFor(model => model.regent_id, new SelectList(Model.RegentList, "reagent_id", "reagent_name"), "Select Regent", new { @class = "form-control select requiredSelect", @id = "regent" })*@
                                                @*<i class="fa fa-money"></i>*@
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                @Html.ValidationMessageFor(model => model.hospitalcollection.status, "", new { @class = "text-danger" })
                                                @Html.DropDownListFor(model => model.hospitalcollection.status, new List<SelectListItem>
                                                        { new SelectListItem { Text = "Collected", Value = "1"},
                                                          new SelectListItem { Text = "Pending", Value = "2"}
                                                        }, "Select Status", new { @class = "form-control" })
                                            </div>
                                        </div>

                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label class="display-block">Status</label>
                                                <div class="form-check form-check-inline">
                                                    <label class="form-check-label" for="product_active">
                                                        @Html.RadioButtonFor(model => model.hospitalcollection.ctrl, 1, new { @id = "active" })
                                                        Active
                                                    </label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <label class="form-check-label" for="product_inactive">
                                                        @Html.RadioButtonFor(model => model.hospitalcollection.ctrl, 0, new { @id = "Inactive" })
                                                        InActive
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="m-t-20">
                                        <button class="btn skin-gradient-btn btn-sm" type="submit" name="submit"><i class="fa fa-plus"></i> Add Collection</button>
                                        <a href="#" class="btn red-gradient-btn btn-sm m-l-15 res-479-m-t-10" data-dismiss="modal"><i class="fa fa-close"></i> Close</a>
                                    </div>
                                    <div id="cardboxcol" class="card-box" hidden>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </div>
}

