@model HospitalManagement.Models.InvoiceModel
@{
    ViewBag.Title = "SettlementIpInvoiceView";
}
<style>
    .medicine-brand {
        display: inline-block;
        margin-bottom: 0;
        font-size: 15px;
        font-weight: 600;
        color: #15558d;
    }

    .formation {
        display: inline-block;
        font-size: 16px;
        color: #888;
        padding-left: 15px;
    }

    .table.bill-table td,
    .table.bill-table th {
        padding: 8px;
    }
</style>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <table style="width:100%;">
                <tbody>
                    <tr>
                        <td>
                            <div class="card mb-0">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 col-md-7 m-auto">
                                            @if (Model.HospitalData != null)
                                            {
                                                foreach (var item in Model.HospitalData)
                                                {
                                                    <div class="text-center">
                                                        @if (item.clinic_doclogo == "" || item.clinic_doclogo == null)
                                                        {
                                                            var im = System.Configuration.ConfigurationManager.AppSettings["gethosdefaultimg"] + "default_hplogo.png";
                                                            <img class="inv-logo" alt="" src="@im">
                                                        }
                                                        else
                                                        {
                                                            var img = System.Configuration.ConfigurationManager.AppSettings["gethosimgUrl"] + item.clinic_doclogo;
                                                            <img class="inv-logo" alt="" src="@img">

                                                        }
                                                        <ul class="list-unstyled mt-10">
                                                            <li><h3><strong>@item.Cliniq_Name</strong></h3></li>
                                                            <li>@item.Cliniq_Addr</li>
                                                            <li>Ph No: @item.Cliniq_phone</li>
                                                        </ul>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                    <div class="row biling-row">
                                        <div class="col-sm-6 col-lg-6 col-md-6">
                                            <ul class="list-unstyled inv_view_list mb-0">
                                                @if (Model.HospitalData != null)
                                                {
                                                    foreach (var pat in Model.PatientData)
                                                    {
                                                        <li>
                                                            <h4><strong>Invoice to : @pat.patient_firstname @pat.patient_lastname</strong></h4>
                                                        </li>
                                                        <li><span>Patient ID : </span> @pat.patient_code</li>
                                                        <li><span>Contact No : </span> @pat.phone</li>
                                                        <li><span>Age : </span> @pat.age</li>
                                                        <li><span>Gender : </span> @pat.gender</li>
                                                        <li><span>Invoice Type : </span> IP Invoice</li>
                                                    }
                                                }
                                            </ul>
                                        </div>
                                        <div class="col-12 col-sm-6 col-lg-6 col-md-6">
                                            @if (Model.HospitalData != null)
                                            {
                                                foreach (var inv in Model.InvoiceData)
                                                {
                                                    <div class="text-sm-right float-sm-right res-mt-20">
                                                        <h4 class="text-uppercase"><strong>Invoice: @inv.invoice_code  </strong></h4>
                                                        <input hidden id="hdninvoicecode" value="@inv.invoice_code" />
                                                        <ul class="list-unstyled inv_view_list mb-0">
                                                            <li><span>Date : </span>@inv.cdate</li>
                                                            <li><span>Due date : </span> @inv.due_date</li>
                                                            <li><span>Print Date/Time : </span>@inv.print_date</li>
                                                            <li>
                                                                <span>User : </span>
                                                                @if (Session["ClinicCode"] != null)
                                                                {
                                                                    if (Convert.ToString(Session["UserCode"]).Split('-')[0] == "HP")
                                                                    {
                                                                        @HttpContext.Current.Session["clinic_name"]

                                                                    }
                                                                    else
                                                                    {
                                                                        @Session["UserCode"].ToString();
                                                                    }
                                                                }
                                                            </li>
                                                            <li><span>ReferalDoctor : </span>@inv.doctor_name</li>
                                                        </ul>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                    @{
                                        //decimal TotalSettalAmount = 0;
                                        int rowNo = 0;
                                        decimal subTotal = 0;
                                        decimal Total = 0;
                                        decimal discount = 0;
                                        decimal PaidAmount = Convert.ToDecimal(Model.PaidAmount);
                                        decimal Extradiscount = Convert.ToDecimal(Model.ExtraDiscount);
                                    }
                                    <input type="hidden" id="GetExtraDiscount" value="@Extradiscount" />
                                    <div class="mt-3">
                                        <h4> Service Details </h4>
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered bill-table invoice-table">
                                                <thead class="thead-light">
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Date</th>
                                                        <th>Service Name</th>
                                                        <th>Amount</th>
                                                        <th>Discount</th>
                                                        <th class="w-210">Final</th>
                                                        <th>SettlementAmount</th>
                                                    </tr>
                                                </thead>
                                                @if (Model.IPInvoicePara.ipinvestigation != null && Model.IPInvoicePara.ipinvestigation.Count > 0)
                                                {
                                                    <tbody>
                                                        <tr class="border-0"><th class="border-0" colspan="5"><h4 class="bill-title">Investigation:</h4></th></tr>
                                                        @foreach (var IPinv in Model.IPInvoicePara.ipinvestigation)
                                                        {
                                                            subTotal += Convert.ToDecimal(IPinv.Price);
                                                            <tr>
                                                                <td> @(rowNo += 1) </td>
                                                                <td>@IPinv.Date</td>
                                                                <td>@IPinv.ServiceName</td>
                                                                <td>@Math.Round(IPinv.Price, 2)</td>
                                                                <td>
                                                                    <label for="name" class="control-label">@Math.Round(IPinv.DiscountAmount, 2)</label>
                                                                </td>
                                                                <td class="w-210" id="amount_@rowNo">
                                                                    @if (IPinv.DiscountAmount > 0)
                                                                    {
                                                                        discount += Convert.ToDecimal(IPinv.DiscountAmount);
                                                                        Total += Convert.ToDecimal(IPinv.Price - IPinv.DiscountAmount);
                                                                        <span>@(Math.Round(IPinv.Price, 2) - Math.Round(IPinv.DiscountAmount, 2))</span>
                                                                        <del>@Math.Round(IPinv.Price, 2)</del>
                                                                    }
                                                                    else
                                                                    {
                                                                        Total += Convert.ToDecimal(IPinv.Price);
                                                                        @Math.Round(IPinv.Price, 2)
                                                                    }

                                                                </td>
                                                                <td>
                                                                    <label for="name" class="control-label" style="display: block; width: 50%; float: left; margin-right: 10px; ">
                                                                        <input id="SettalMentDiscount" type="number" value="@Math.Round(IPinv.settlement_discount)" style="width:100%" class="text-info_@(rowNo)" />
                                                                    </label>
                                                                    <div class="controls" style=" display: table-cell; width: 15%;">
                                                                        <a href="javascript:;" id="edit" onclick="setdiscount(@(rowNo),@IPinv.serviceid,'@IPinv.type',@IPinv.Price,@IPinv.DiscountAmount)" class="btn btn-sm bg-success-light"><i class="fa fa-save"></i></a>
                                                                        <span id="success_message_@(rowNo)" style="color:#2069a9;font-size:12px;font-weight: 600;"></span>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                }
                                                @if (Model.IPInvoicePara.ipadvanceservices != null && Model.IPInvoicePara.ipadvanceservices.Count > 0)
