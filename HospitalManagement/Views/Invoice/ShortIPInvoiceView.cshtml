            $("#remark_label").replaceWith(function () {
                debugger;
                return '<textarea class="form-control" cols="20" id="invoiceRemark" name="invoiceRemark" placeholder="Please type remark" rows="2">' + RemarkText + '</textarea>';
            });
            //End
        }

        //Added By Dhaval Provide Gross Discount

        function Set_Grossdiscount() {
            debugger;
            var text = $('.text-info_extra').text() == "" ? 0 : $('.text-info_extra').text();
            var attrid = "attribute_extra";
            var input = $('<input id=' + attrid + ' type="number" class="form-control" value="' + text + '" />')
            $('.text-info_extra').text('').append(input);
            $('#olddoscunt').val(text);
            input.select();

            input.blur(function () {
                debugger;
                var invoicecode = $("#hdninvoicecode").val();
                var text = $('#' + attrid).val() == "" ? 0 : $('#' + attrid).val();
                //var patrealse = $('#hdnpatrealse').val();
                //if ((parseFloat(parseFloat($("#Net_Payable").text()) - parseFloat($("#pad_amount").text())) >= parseFloat(text) && parseInt(patrealse) == 1) || parseInt(patrealse)==0) {
                $.ajax({
                    type: "POST",
                    url: "/Invoice/IPInvoiceGrossDiscount",
                    data: { InvoiceCode: invoicecode, Discount: text },
                    success: function (data) {
                        debugger;
                        if (data.length > 0) {
                            if (parseInt(data[0].Status) > 0) {
                                $("#Net_Payable").text(data[0].Net_Payable.toFixed(2));
                                $("#Due_Amount").text(data[0].Total_Due.toFixed(2));
                                $('#' + attrid).parent().text(text);
                                $('#' + attrid).remove();
                                if (parseInt(data[0].Status) == 2) {
                                    debugger;
                                    $("#paidimg").empty();
                                    $("#paidimg").html("<div class='water_mark_img text-center'><img src='/wwwroot/assets/img/water_mark_img.png' class='img-fluid'></div>");
                                }
                            }
                            else {
                                $('#' + attrid).parent().text($('#olddoscunt').val());
                                $('#' + attrid).remove();
                                $('#alt_msg').text('Please enter disount amount less than total due amount !!! ');
                                $("#Alert_msg").modal('show');
                            }
                        }
                        else {
                            $('#' + attrid).parent().text($('#olddoscunt').val());
                            $('#' + attrid).remove();
                            $('#alt_msg').text('Something went to wrong Please contact administrator');
                            $("#Alert_msg").modal('show');
                        }
                    },
                    error: function (textStatus, errorThrown) {
                        alert(textStatus);
                    }
                });

            });

        }

        function DisplayDateTime() {
            debugger;
            var now = moment().format("DD MMM YYYY  hh:mm A");
            $("#localdate").text(now);
        }

        function AddRemark() {
            debugger;
            $("#status_msg").html('<span class="icon-spinner"><i class="fa fa-spinner load-animate"></i></span>');
            $('.icon-spinner').show();
            $.ajax({
                type: "POST",
                url: "/Invoice/AddInvoceRemark",
                data: { invoicecode: $("#hdninvoicecode").val(), Remark: $('#invoiceRemark').val() },
                success: function (data) {
                    if (parseInt(data) > 0) {
                        $("#status_msg").html('<div style="font-weight:600" class="text-success" id="message-in-out"> Success </div>');
                    }
                    else {
                        $("#status_msg").html('<div style="font-weight:600" class="text-danger" id="message-in-out"> Fail </div>');
                    }
                    $('.icon-spinner').hide();
                    $("#message-in-out").delay(3000).fadeOut("slow");
                },
                error: function (textStatus, errorThrown) { alert(textStatus); $('.icon-spinner').hide(); }
            });
        }
    </script>
