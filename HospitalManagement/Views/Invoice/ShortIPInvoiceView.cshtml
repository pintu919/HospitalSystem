@model HospitalManagement.Models.InvoiceModel
@{
    ViewBag.Title = "ShortIPInvoiceView";
}
<style>
    .medicine-brand {
        display: inline-block;
        margin-bottom: 0;
        font-size: 15px;
        font-weight: 600;
        color: #15558d;
    }

    .formation {
        display: inline-block;
        font-size: 16px;
        color: #888;
        padding-left: 15px;
    }

    .table.bill-table td,
    .table.bill-table th {
        padding: 8px;
    }

    .icon-spinner {
        display: none;
        font-size: 25px;
        font-weight: 600;
    }

    .load-animate {
        -animation: spin .7s infinite linear;
        -webkit-animation: spin2 .7s infinite linear;
    }
    /* .table > tbody > tr > .service_width {
        width:30% !important;
    }*/
    @@-webkit-keyframes spin2 {
        from {
            -webkit-transform: rotate(0deg);
        }

        to {
            -webkit-transform: rotate(360deg);
        }
    }

    @@keyframes spin {
        from {
            transform: scale(1) rotate(0deg);
        }

        to {
            transform: scale(1) rotate(360deg);
        }
    }

    .bg-black-light {
        background-color: rgb(15 17 17 / 12%) !important;
        color: #232524e6 !important;
    }
</style>
@*@System.DateTime.Now.ToString("MMM dd yyyy hh:mm tt")*@
