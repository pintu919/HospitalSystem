                                    <li>
                                        <h5><strong>@pat.patient_firstname @pat.patient_lastname</strong></h5>
                                    </li>
                                    <li><span>@pat.present_address</span></li>
                                    <li>@pat.phone</li>
                                    <li>@pat.email @*<a href="#">@pat.email</a>*@</li>
                                }

                            </ul>

                        </div>
