                                                    <div class="table-responsive">
                                                        <table class="table mb-0 table-bordered">
                                                            <tbody>
                                                                <tr>
                                                                    <th><b>Total Amount (TK):</b></th>
                                                                    <td class="w-210">
                                                                        <span id="total_item_discount">
                                                                            @(Math.Round(subTotal, 2) - Math.Round(discount, 2))
                                                                        </span>
                                                                        <del id="tot_amount" class="@(Math.Round(discount, 2)> 0 ? "d-inline-block" : "d-none")">@Math.Round(subTotal, 2)</del>

                                                                    </td>
                                                                </tr>
                                                                <tr hidden>
                                                                    <th><b>Discount Amount (TK):</b></th>
                                                                    <td class="w-210" id="Discount_Amount">@Math.Round(discount, 2)</td>
                                                                </tr>
                                                                <tr>
                                                                    <th><b>Discount Amount (TK):</b></th>
                                                                    <td class="w-210" id="Discount_Amount">
                                                                        @foreach (var inv in Model.InvoiceData)
                                                                        {
                                                                            if (inv.ctrl == 0)
                                                                            {
                                                                                <label for="name" class="control-label"><p style="margin-bottom:0;" class="text-info_extra">@Math.Round(Extradiscount, 2)</p></label>
                                                                                <div class="controls pull-right">
                                                                                    <a href="javascript:;" id="edit" onclick="setdiscount()" class="btn btn-sm bg-success-light"><i class="fa fa-edit"></i></a>
                                                                                </div>
                                                                                @*<label onclick="setdiscount()" for="name" class="control-label form-control"><p style="margin-bottom:0;" class="text-info_extra">@Math.Round(Extradiscount, 2)</p></label>*@
                                                                            }
                                                                            else
                                                                            {
                                                                                <label for="name" class="control-label">@Math.Round(Extradiscount, 2)</label>
                                                                            }
                                                                        }

                                                                        @*@Math.Round(discount, 2)*@
                                                                    </td>
                                                                </tr>

                                                                <tr>
                                                                    <th><b>Refund Amount (TK):</b></th>
                                                                    <td class="w-210" id="refund_amount">@Math.Round(refundAmount, 2)</td>
                                                                </tr>

                                                                <tr>
                                                                    <th><b>Net Payable (TK):</b></th>
                                                                    <td class="w-210" id="Net_Payable">@(Math.Round(Total, 2) - Math.Round(Extradiscount+ refundAmount, 2))</td>
                                                                </tr>
                                                                <tr>
                                                                    <th><b>Paid Amount (TK):</b></th>
                                                                    <td class="w-210" id="pad_amount">@Math.Round(PaidAmount, 2)</td>
                                                                </tr>



                                                                <tr class="table-primary">
                                                                    <th><b>Total Due (TK):</b> </th>
                                                                    <th class="w-210" id="Due_Amount">@(((Math.Round(Total, 2) - Math.Round(Extradiscount + refundAmount, 2)) - Math.Round(PaidAmount, 2))>0? ((Math.Round(Total, 2) - Math.Round(Extradiscount + refundAmount, 2)) - Math.Round(PaidAmount, 2)) : 0) </th>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    @foreach (var inv in Model.InvoiceData)
                                                    {
