                                                                @foreach (var invjournal in Model.JournalData)
                                                                {
                                                                    <tr>
                                                                        <td> @(rowNo += 1)</td>
                                                                        <td>@invjournal.journal_ref</td>
                                                                        <td>@invjournal.journal_date</td>
                                                                        <td>@invjournal.paymode</td>
                                                                        <td>@invjournal.payment_type</td>
                                                                        <td> @Math.Round(invjournal.dr_amount, 2)</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                }
                                            </div>
                                            <div class="col-sm-5">
