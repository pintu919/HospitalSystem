@section scripts{
    <script type="text/javascript">

        //$(".Billing").addClass("subdrop");
        //$(".Submenu_Billing").css("display", "block");
        //$(".Submenu_OPD").css("display", "block");
        //$(".Invoice").addClass("active");

        $(document).ready(function () {
            DisplayDateTime();
        });

        function printDiv(divName) {
            debugger;
            //Remark for print Box
            var RemarkText = $("#invoiceRemark").val();
            $("#invoiceRemark").replaceWith(function () {
                debugger;
                return "<label id='remark_label'>" + RemarkText + "</label>";
            });
            //End
            $(".printfooter").removeClass("d-none");
            $(".page-footer-space").removeClass("d-none");
            var contents = $("#" + divName).html();
            var frame1 = $('<iframe />');
            frame1[0].name = "frame1";
            frame1.css({ "width": "100%" });
            $("body").append(frame1);
            var frameDoc = frame1[0].contentWindow ? frame1[0].contentWindow : frame1[0].contentDocument.document ? frame1[0].contentDocument.document : frame1[0].contentDocument;
            frameDoc.document.open();
            //Create a new HTML document.
            frameDoc.document.write('<html>');
            frameDoc.document.write('<body>');
            //Append the external CSS file.
            frameDoc.document.write('<link href="/wwwroot/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />')
            frameDoc.document.write('<link href="/wwwroot/assets/css/font-awesome.min.css" rel="stylesheet" type="text/css" />')
            frameDoc.document.write('<link href="/wwwroot/assets/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />')
            frameDoc.document.write('<link href="/wwwroot/assets/css/style.css" rel="stylesheet" type="text/css" />');
            //Append the DIV contents.
            frameDoc.document.write(contents);
            frameDoc.document.write('</body></html>');
            frameDoc.document.close();
            setTimeout(function () {
                window.frames["frame1"].focus();
                window.frames["frame1"].print();
                frame1.remove();
            }, 500);
            $(".printfooter").addClass("d-none");
            $(".page-footer-space").addClass("d-none");

            //Remark for print Box
            $("#remark_label").replaceWith(function () {
                debugger;
                return '<textarea class="form-control" cols="20" id="invoiceRemark" name="invoiceRemark" placeholder="Please type remark" rows="2">' + RemarkText + '</textarea>';
            });
            //End
        }

        function setdiscount() {
            debugger;
            var text = $('.text-info_extra').text() == "" ? 0 : $('.text-info_extra').text();
            var attrid = "attribute_extra";
            var input = $('<input id=' + attrid + ' type="number" class="form-control" value="' + text + '" />')
            $('.text-info_extra').text('').append(input);
            $('#olddoscunt').val(text);
            input.select();

            input.blur(function () {
                debugger;
                var invoicecode = $("#hdninvoicecode").val();
                var text = $('#' + attrid).val() == "" ? 0 : $('#' + attrid).val();
                if (parseFloat(parseFloat($("#Net_Payable").text()) - parseFloat($("#pad_amount").text())) >= parseFloat(text)) {
                    $.ajax({
                        type: "POST",
                        url: "/Invoice/OPDInvoiceUpdateDiscount",
                        data: { InvoiceCode: invoicecode, Discount: text },
                        success: function (data) {
                            if (data.length > 0) {
                                if (parseInt(data[0].Status) > 0) {
                                    debugger;
                                    $("#Net_Payable").text(data[0].Net_Payable.toFixed(2));
                                    $("#Due_Amount").text(data[0].Total_Due.toFixed(2));
                                    $('#' + attrid).parent().text(text);
                                    $('#' + attrid).remove();
                                    if (parseInt(data[0].Status) == 2) {
                                        debugger;
                                        $("#paidimg").empty();
                                        $("#paidimg").html("<div class='water_mark_img text-center'><img src='/wwwroot/assets/img/water_mark_img.png' class='img-fluid'></div>");
                                    }
                                }

                                else {
                                    $('#' + attrid).parent().text($('#olddoscunt').val());
