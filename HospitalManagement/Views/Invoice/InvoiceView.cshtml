                                                                    <img src="~/wwwroot/assets/img/water_mark_img.png" class="img-fluid">
                                                                </div>
                                                            }
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row m-t-20 align-items-center">
                                            <div class="col-lg-7 col-sm-6">
                                                <div class="invoice-info">
                                                    <h5><strong>Other information :</strong></h5>
                                                    @foreach (var item in Model.HospitalData)
                                                    {
                                                        <p class="text-muted">@item.inv_content</p>
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-lg-5 col-sm-6">
                                                <div class="invoice-info">
                                                    <div class="form-group">
                                                        <input type="text" name="invoice" class="form-control">
                                                        <lable>Signature</lable>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row m-t-20 align-items-center">
                                            <div class="col-lg-5 col-xl-4 col-sm-5">
                                                <div class="invoice-info disable_value">
                                                    <h5 class="d-inline-block">Previous invoice due amount :</h5>
                                                    <span class="text-muted ml-2"><strong> @Model.DueAmount</strong></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-4 col-sm-5 col-sm-4">
                                                @Html.TextAreaFor(m => m.invoiceRemark, new { @class = "form-control", placeholder = "Please type remark" })
                                            </div>
                                            <div class="col-lg-1 col-sm-1 col-sm-1">
                                                <div class="controls pull-right">
                                                    <a href="javascript:;" id="edit" onclick="AddRemark()" class="btn btn-sm bg-success-light"><i class="fa fa-save"></i></a>
                                                </div>
                                            </div>
                                            <div class="col-lg-2 col-sm-2 col-sm-2 text-right" id="status_msg"> </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td>
                            <!--place holder for the fixed-position footer-->
                            <div class="page-footer-space d-none"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="col-12 printfooter d-none">
            @Html.Raw(@Model.FooterHtml)
        </div>
    </div>
</div>
