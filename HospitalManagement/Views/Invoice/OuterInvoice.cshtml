@model HospitalManagement.Models.InvoiceModel
@{
    ViewBag.Title = "OuterInvoice";
}

<div class="content">
    <div class="row">
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.InvoiceCode, new { @class = "form-control", placeholder = "Enter Invoice Code" })
        </div>
        <div class="col-md-4">
            <button class="btn skin-gradient-btn" onclick="FindInvoice()">Find</button>
        </div>
    </div>
    <div class="row mt-3 Addrow_Button m-0">
        @if (Model.HospitalData.Count > 0)
        {
            if (Model.Type == "opd_invoicedetails")
            {
                if (Model.InvoicePara.opd_doctorvisit != null && Model.InvoicePara.opd_doctorvisit.Count > 0)
                {
                        <div class="add-more mr-2">
                            <a href="javascript:void(0);" onClick="AddNewRow('dcotorvisit')" class="add-experience btn btn-sm btn-outline-secondary">
                                <i class="fa fa-plus-circle"></i><span class="ml-2">DoctorFees</span>
                            </a>
                        </div>
                }
                if (Model.InvoicePara.opd_investigation != null && Model.InvoicePara.opd_investigation.Count > 0)
                {
                        <div class="add-more mr-2">
                            <a href="javascript:void(0);" onClick="AddNewRow('inv_table')" class="add-experience btn btn-sm btn-outline-primary">
                                <i class="fa fa-plus-circle"></i><span class="ml-2">Investigation</span>
                            </a>
                        </div>
                }
                if (Model.InvoicePara.opd_advanceservices != null && Model.InvoicePara.opd_advanceservices.Count > 0)
                {
                        <div class="add-more mr-2">
                            <a href="javascript:void(0);" onClick="AddNewRow('billingservices')" class="add-experience btn btn-sm btn-outline-warning">
                                <i class="fa fa-plus-circle"></i><span class="ml-2">Services</span>
                            </a>
                        </div>
                }
                if (Model.InvoicePara.ipotservices != null && Model.InvoicePara.ipotservices.Count > 0)
                {
                        <div class="add-more mr-2">
                            <a href="javascript:void(0);" onClick="AddNewRow('otservice')" class="add-experience btn btn-sm btn-outline-info">
                                <i class="fa fa-plus-circle"></i><span class="ml-2">OT Services</span>
                                <i> </i>
                            </a>
                        </div>
                }
            }
            else
            {
                if (Model.IPInvoicePara.doctorvisit != null && Model.IPInvoicePara.doctorvisit.Count > 0)
                {
                        <div class="add-more mr-2">
                            <a href="javascript:void(0);" onClick="AddNewRow('dcotorvisit','IP')" class="add-experience btn btn-sm btn-outline-secondary">
                                <i class="fa fa-plus-circle"></i><span class="ml-2">DoctorFees</span>
                            </a>
                        </div>
                }
                if (Model.IPInvoicePara.ipinvestigation != null && Model.IPInvoicePara.ipinvestigation.Count > 0)
                {
                        <div class="add-more mr-2">
                            <a href="javascript:void(0);" onClick="AddNewRow('inv_table','IP')" class="add-experience btn btn-sm btn-outline-primary">
                                <i class="fa fa-plus-circle"></i><span class="ml-2">Investigation</span>
                            </a>
                        </div>
                }
                if (Model.IPInvoicePara.ipadvanceservices != null && Model.IPInvoicePara.ipadvanceservices.Count > 0)
                {
                        <div class="add-more mr-2">
                            <a href="javascript:void(0);" onClick="AddNewRow('billingservices','IP')" class="add-experience btn btn-sm btn-outline-warning">
                                <i class="fa fa-plus-circle"></i><span class="ml-2">Services</span>
                            </a>
                        </div>
                }
                if (Model.IPInvoicePara.ipotservices != null && Model.IPInvoicePara.ipotservices.Count > 0)
                {
                        <div class="add-more mr-2">
                            <a href="javascript:void(0);" onClick="AddNewRow('otservice','IP')" class="add-experience btn btn-sm btn-outline-info">
                                <i class="fa fa-plus-circle"></i><span class="ml-2">OT Services</span>
                                <i> </i>
                            </a>
                        </div>
                }
            }
                <div class="add-more mr-2">
                    <a href="javascript:void(0);" onClick="AddNewRow_Receipt('receipt_row')" class="add-experience btn btn-sm btn-outline-success">
                        <i class="fa fa-plus-circle"></i><span class="ml-2">Receipt</span>
                        <i> </i>
                    </a>
                </div>
                <div class="add-more mr-2">
                    <a href="javascript:void(0);" onClick="RemoveDeleteButton()" class="add-experience btn btn-sm btn-outline-danger">
                        <i class="fa fa-trash-o"></i><span class="ml-2">RemoveDeleteBtn</span>
                        <i> </i>
                    </a>
                </div>
        }
    </div>
    <div class="row ip_opdinv">
        @if (Model.Type == "opd_invoicedetails")
        {
            <div class="col-12">
                @if (Model.HospitalData.Count > 0)
                {
                    <div class="row">
                        <div class="col-12 text-center">
                            @*<h4 class="page-title d-inline-block fz-22">Patient Invoice</h4>*@
                            <div class="btn-group btn-group-sm mb-3 float-right ">
                                <button class="btn btn-white" onclick="printDiv('printableArea')"><i class="fa fa-print fa-lg"></i> Print</button>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="printableArea">
                        <div class="col-md-12">
                            <table style="width:100%;">
                                <tbody>
                                    <tr>
                                        <td>
                                            <div class="card mb-0">
                                                <div class="card-body">
                                                    <div class="row">
                                                        <div class="col-12 col-md-7 m-auto">
                                                            @foreach (var item in Model.HospitalData)
                                                            {
                                                                <div class="text-center">
                                                                    @if (item.clinic_doclogo == "" || item.clinic_doclogo == null)
                                                                    {
                                                                        var im = System.Configuration.ConfigurationManager.AppSettings["gethosdefaultimg"] + "default_hplogo.png";
                                                                        <img class="inv-logo" alt="" src="@im">@*<span class="status online"></span>*@
                                                                    }
                                                                    else
                                                                    {
                                                                        var img = System.Configuration.ConfigurationManager.AppSettings["gethosimgUrl"] + item.clinic_doclogo;
                                                                        <img class="inv-logo" alt="" src="@img">
                                                                        @*<span class="status online"></span>*@
                                                                    }
                                                                    @*<img src="http://fileftp.amaderdoctor.com/Hospital/DefaultHospitalLogo/default_hplogo.png" class="inv-logo" alt="" height="75" width="75">*@
                                                                    <ul class="list-unstyled">
                                                                        <li><h3><strong>@item.Cliniq_Name</strong></h3></li>
                                                                        <li>@item.Cliniq_Addr</li>
                                                                        <li>Ph No: @item.Cliniq_phone</li>
                                                                    </ul>
                                                                </div>
                                                            }
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-6 col-lg-6 col-md-6">
                                                            <h5>Invoice to:</h5>
                                                            <ul class="list-unstyled inv_view_list mb-0">
                                                                @foreach (var pat in Model.PatientData)
                                                                {
                                                                    <li>
                                                                        <h4><strong>@pat.patient_firstname @pat.patient_lastname</strong></h4>
                                                                    </li>
                                                                    <li><span>Patient ID : </span>@pat.patient_code</li>
                                                                    <li><span>Contact No : </span>@pat.phone</li>
                                                                    <li><span>Age/Gender : </span> @pat.age/@pat.gender</li>
                                                                    <li><span>Invoice Type : </span> OPD Invoice</li>
                                                                }
                                                            </ul>
                                                        </div>

                                                        <div class="col-sm-6 col-lg-6 col-md-6">
                                                            @foreach (var inv in Model.InvoiceData)
                                                            {
                                                                <div class="invoice-details">
                                                                    <h4 class="text-uppercase"><strong>Invoice @inv.invoice_code </strong></h4>
                                                                    <input hidden id="hdninvoicecode" value="@inv.invoice_code" />
                                                                    <ul class="list-unstyled inv_view_list mb-0">
                                                                        <li><span>Date : </span>@inv.cdate</li>
                                                                        <li><span>Due Date : </span> <span>@inv.due_date</span></li>
                                                                        <li><span>Print Date/Time : </span> @inv.print_date</li>
                                                                        <li>
                                                                            <span>User : </span>
                                                                            @if (Session["ClinicCode"] != null)
                                                                            {
                                                                                if (Convert.ToString(Session["UserCode"]).Split('-')[0] == "HP")
                                                                                {
                                                                                    @HttpContext.Current.Session["clinic_name"]
                                                                                    @*@Session["ClinicCode"].ToString();*@
                                                                                }
                                                                                else
                                                                                {
                                                                                    @Session["UserCode"].ToString();
                                                                                }
                                                                            }
                                                                        </li>
                                                                        <li><span>Referal Doctor : </span> @inv.doctor_name</li>
                                                                    </ul>
                                                                </div>
                                                            }
                                                        </div>
                                                    </div>
                                                    @{
                                                        int rowNo = 0;
                                                        decimal subTotal = 0;
                                                        decimal Total = 0;
                                                        decimal discount = 0;
                                                        decimal PaidAmount = Convert.ToDecimal(Model.PaidAmount);
                                                        decimal Extradiscount = Convert.ToDecimal(Model.ExtraDiscount);
                                                    }
                                                    <div class="">
                                                        <h4><strong> Service Details </strong></h4>
                                                        <div class="table-responsive">
                                                            <table class="table table-striped table-hover invoice-table">
                                                                <thead class="thead-light">
                                                                    <tr>
                                                                        <th>#</th>
                                                                        <th>Services Details</th>
                                                                        <th>Unit Cost</th>
                                                                        <th>Discount</th>
                                                                        <th class="w-210">Total</th>
                                                                        <th></th>
                                                                    </tr>
                                                                </thead>
                                                                @if (Model.InvoicePara.opd_doctorvisit != null && Model.InvoicePara.opd_doctorvisit.Count > 0)
                                                                {
                                                                    <tbody id="dcotorvisit">
                                                                        <tr class="border-0"><th class="border-0" colspan="5"><h4 class="bill-title">Doctor CheckUp Fees:</h4></th></tr>
                                                                        @foreach (var invpara in Model.InvoicePara.opd_doctorvisit)
                                                                        {
                                                                            subTotal += Convert.ToDecimal(invpara.Price);
                                                                            <tr>
                                                                                <td> @(rowNo += 1)</td>
                                                                                <td>@invpara.ServiceName</td>
                                                                                <td>@Math.Round(invpara.Price, 2)</td>
                                                                                <td>@Math.Round(invpara.DiscountAmount, 2)</td>
                                                                                @*<td>1</td>*@
                                                                                <td class="w-210" id="amount_@rowNo">
                                                                                    @if (invpara.Discount > 0)
                                                                                    {
                                                                                        discount += Convert.ToDecimal(invpara.DiscountAmount);
                                                                                        Total += Convert.ToDecimal(invpara.Price - invpara.DiscountAmount);
                                                                                        <span>@(Math.Round(invpara.Price, 2) - Math.Round(invpara.DiscountAmount, 2))</span>
                                                                                        <del>@Math.Round(invpara.Price, 2)</del>

                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        Total += Convert.ToDecimal(invpara.Price);
                                                                                        @Math.Round(invpara.Price, 2)

                                                                                    }
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                }
                                                                @if (Model.InvoicePara.opd_investigation != null && Model.InvoicePara.opd_investigation.Count > 0)
                                                                {
                                                                    <tbody id="inv_table">
                                                                        <tr class="border-0"><th class="border-0" colspan="5"><h4 class="bill-title">Investigation:</h4></th></tr>
                                                                        @foreach (var invpara in Model.InvoicePara.opd_investigation)
                                                                        {
                                                                            subTotal += Convert.ToDecimal(invpara.Price);
                                                                            <tr>
                                                                                <td> @(rowNo += 1)</td>
                                                                                <td>@invpara.ServiceName</td>
                                                                                <td>@Math.Round(invpara.Price, 2)</td>
                                                                                <td>@Math.Round(invpara.DiscountAmount, 2)</td>
                                                                                <td class="w-210" id="amount_@rowNo">
                                                                                    @if (invpara.Discount > 0)
                                                                                    {
                                                                                        discount += Convert.ToDecimal(invpara.DiscountAmount);
                                                                                        Total += Convert.ToDecimal(invpara.Price - invpara.DiscountAmount);
                                                                                        <span>@(Math.Round(invpara.Price, 2) - Math.Round(invpara.DiscountAmount, 2))</span>
                                                                                        <del>@Math.Round(invpara.Price, 2)</del>
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        Total += Convert.ToDecimal(invpara.Price);
                                                                                        @Math.Round(invpara.Price, 2)
                                                                                    }
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                }
                                                                @if (Model.InvoicePara.opd_advanceservices != null && Model.InvoicePara.opd_advanceservices.Count > 0)
                                                                {
                                                                    <tbody id="billingservices">
                                                                        <tr class="border-0"><th class="border-0" colspan="5"><h4 class="bill-title">Services:</h4></th></tr>
                                                                        @foreach (var invpara in Model.InvoicePara.opd_advanceservices)
                                                                        {
                                                                            subTotal += Convert.ToDecimal(invpara.Price);
                                                                            <tr>
                                                                                <td> @(rowNo += 1)</td>
                                                                                <td>@invpara.ServiceName</td>
                                                                                <td>@Math.Round(invpara.Price, 2)</td>
                                                                                <td>@Math.Round(invpara.Discount, 2)</td>
                                                                                @*<td>1</td>*@
                                                                                <td class="w-210" id="amount_@rowNo">
                                                                                    @if (invpara.Discount > 0)
                                                                                    {
                                                                                        discount += Convert.ToDecimal(invpara.DiscountAmount);
                                                                                        Total += Convert.ToDecimal(invpara.Price - invpara.DiscountAmount);

                                                                                        <span>@(Math.Round(invpara.Price, 2) - Math.Round(invpara.DiscountAmount, 2))</span>
                                                                                        <del>@Math.Round(invpara.Price, 2)</del>
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        Total += Convert.ToDecimal(invpara.Price);
                                                                                        @Math.Round(invpara.Price, 2)

                                                                                    }
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                }
                                                                @if (Model.InvoicePara.ipotservices != null && Model.InvoicePara.ipotservices.Count > 0)
                                                                {
                                                                    <tbody id="otservice">
                                                                        <tr class="border-0"><th class="border-0" colspan="5"><h4 class="bill-title">OT Services:</h4></th></tr>

                                                                        @foreach (var invpara in Model.InvoicePara.ipotservices)
                                                                        {
                                                                            subTotal += Convert.ToDecimal(invpara.Price);
                                                                            <tr>
                                                                                <td> @(rowNo += 1)</td>
                                                                                <td>@invpara.ServiceName</td>
                                                                                <td>@Math.Round(invpara.Price, 2)</td>
                                                                                <td>@Math.Round(invpara.DiscountAmount, 2)</td>
                                                                                <td class="w-210" id="amount_@rowNo">
                                                                                    @if (invpara.Discount > 0)
                                                                                    {
                                                                                        discount += Convert.ToDecimal(invpara.DiscountAmount);
                                                                                        Total += Convert.ToDecimal(invpara.Price - invpara.DiscountAmount);
                                                                                        <span>@(Math.Round(invpara.Price, 2) - Math.Round(invpara.DiscountAmount, 2))</span>
                                                                                        <del>@Math.Round(invpara.Price, 2)</del>
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        Total += Convert.ToDecimal(invpara.Price);
                                                                                        @Math.Round(invpara.Price, 2)
                                                                                    }
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                }
                                                            </table>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <div class="row invoice-payment">
                                                            <div class="col-sm-7">
                                                                @if (Model.JournalData != null && Model.JournalData.Count > 0)
                                                                {
                                                                    <div class="table-responsive">
                                                                        <table class="table table-striped table-hover table-bordered">
                                                                            <thead class="thead-light">
                                                                                <tr>
                                                                                    <th>#</th>
                                                                                    <th>Receipt No</th>
                                                                                    <th>Receipt Date</th>
                                                                                    <th>Paymode</th>
                                                                                    <th>Type</th>
                                                                                    <th>Amount</th>
                                                                                </tr>
                                                                            </thead>
                                                                            <tbody id="receipt_row">
                                                                                @foreach (var invjournal in Model.JournalData)
                                                                                {
                                                                                    <tr>
                                                                                        <td> @(rowNo += 1)</td>
                                                                                        <td>@invjournal.journal_ref</td>
                                                                                        <td>@invjournal.journal_date</td>
                                                                                        <td>@invjournal.paymode</td>
                                                                                        <td>@invjournal.payment_type</td>
                                                                                        <td> @Math.Round(invjournal.dr_amount, 2)</td>
                                                                                    </tr>
                                                                                }
                                                                            </tbody>
                                                                        </table>
                                                                    </div>
                                                                }
                                                            </div>
                                                            <div class="col-sm-5">
                                                                <div class="m-b-20 position-relative">
                                                                    <div class="table-responsive">
                                                                        <table class="table mb-0 table-bordered">
                                                                            <tbody>
                                                                                <tr>
                                                                                    <th><b>Total Amount (TK):</b></th>
                                                                                    <td class="w-210">
                                                                                        <span id="total_item_discount">
                                                                                            @(Math.Round(subTotal, 2) - Math.Round(discount, 2))
                                                                                        </span>
                                                                                        <del id="tot_amount" class="@(Math.Round(discount, 2) > 0 ? "d-inline-block" : "d-none")">@Math.Round(subTotal, 2)</del>

                                                                                    </td>
                                                                                </tr>
                                                                                <tr hidden>
                                                                                    <th><b>Discount Amount (TK):</b></th>
                                                                                    <td class="w-210" id="Discount_Amount">@Math.Round(discount, 2)</td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th><b>Discount Amount (TK):</b></th>
                                                                                    <td class="w-210" id="Discount_Amount">
                                                                                        @foreach (var inv in Model.InvoiceData)
                                                                                        {
                                                                                            if (inv.ctrl == 0)
                                                                                            {
                                                                                                <label for="name" class="control-label"><p style="margin-bottom:0;" class="text-info_extra">@Math.Round(Extradiscount, 2)</p></label>
                                                                                                <div class="controls pull-right">
                                                                                                    <a href="javascript:;" id="edit" onclick="setdiscount()" class="btn btn-sm bg-success-light"><i class="fa fa-edit"></i></a>
                                                                                                </div>
                                                                                                @*<label onclick="setdiscount()" for="name" class="control-label form-control"><p style="margin-bottom:0;" class="text-info_extra">@Math.Round(Extradiscount, 2)</p></label>*@
                                                                                            }
                                                                                            else
                                                                                            {
                                                                                                <label for="name" class="control-label">@Math.Round(Extradiscount, 2)</label>
                                                                                            }
                                                                                        }

                                                                                        @*@Math.Round(discount, 2)*@
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th><b>Net Payable (TK):</b></th>
                                                                                    <td class="w-210" id="Net_Payable">@(Math.Round(Total, 2) - Math.Round(Extradiscount, 2))</td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th><b>Paid Amount (TK):</b></th>
                                                                                    <td class="w-210" id="pad_amount">@Math.Round(PaidAmount, 2)</td>
                                                                                </tr>
                                                                                <tr class="table-primary">
                                                                                    <th><b>Totle Due (TK):</b> </th>
                                                                                    <th class="w-210" id="Due_Amount">@((Math.Round(Total, 2) - Math.Round(Extradiscount, 2)) - Math.Round(PaidAmount, 2)) </th>
                                                                                </tr>
                                                                            </tbody>
                                                                        </table>
                                                                    </div>
                                                                    @foreach (var inv in Model.InvoiceData)
                                                                    {
                                                                        <div id="paidimg">
                                                                            @if (inv.ctrl == 1)
                                                                            {
                                                                                <div class="water_mark_img text-center">
                                                                                    <img src="~/wwwroot/assets/img/water_mark_img.png" class="img-fluid">
                                                                                </div>
                                                                            }
                                                                        </div>
                                                                    }
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row m-t-20 align-items-center">
                                                            <div class="col-lg-7 col-sm-6">
                                                                <div class="invoice-info">
                                                                    <h5><strong>Other information :</strong></h5>
                                                                    @foreach (var item in Model.HospitalData)
                                                                    {
                                                                        <p class="text-muted">@item.inv_content</p>
                                                                    }
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-5 col-sm-6">
                                                                <div class="invoice-info">
                                                                    <div class="form-group">
                                                                        <input type="text" name="invoice" class="form-control">
                                                                        <lable>Signature</lable>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td>
                                            <!--place holder for the fixed-position footer-->
                                            <div class="page-footer-space d-none"></div>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <div class="col-12 printfooter d-none">
                            @Html.Raw(@Model.FooterHtml)
                        </div>
                    </div>
                }
                else
                {
                    if (Model.Type != "" && Model.Type != null)
                    {
                        <div class="alert alert-primary alert-dismissible fade show mt-3" role="alert">
                            <strong class="mr-2">Message!</strong>Only fully paid invoice showing here..This invoice is not fully paid..!!
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                }
            </div>
        }
        else
        {
            <div class="col-12">
                @if (Model.HospitalData.Count > 0)
                {
                    <div class="row">
                        <div class="col-12 text-center">
                            <div class="btn-group btn-group-sm mb-3 float-right ">
                                <button class="btn btn-white" onclick="printDiv('printableArea')"><i class="fa fa-print fa-lg"></i> Print</button>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="printableArea">
                        <div class="col-md-12">
                            <table style="width:100%;">
                                <tbody>
                                    <tr>
                                        <td>
                                            <div class="card mb-0">
                                                <div class="card-body">
                                                    <div class="row">
                                                        <div class="col-12 col-md-7 m-auto">
                                                            @if (Model.HospitalData != null)
                                                            {
                                                                foreach (var item in Model.HospitalData)
                                                                {
                                                                    <div class="text-center">
                                                                        @if (item.clinic_doclogo == "" || item.clinic_doclogo == null)
                                                                        {
                                                                            var im = System.Configuration.ConfigurationManager.AppSettings["gethosdefaultimg"] + "default_hplogo.png";
                                                                            <img class="inv-logo" alt="" src="@im">
                                                                        }
                                                                        else
                                                                        {
                                                                            var img = System.Configuration.ConfigurationManager.AppSettings["gethosimgUrl"] + item.clinic_doclogo;
                                                                            <img class="inv-logo" alt="" src="@img">

                                                                        }
                                                                        <ul class="list-unstyled mt-10">
                                                                            <li><h3><strong>@item.Cliniq_Name</strong></h3></li>
                                                                            <li>@item.Cliniq_Addr</li>
                                                                            <li>Ph No: @item.Cliniq_phone</li>
