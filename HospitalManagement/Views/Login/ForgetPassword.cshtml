@model  HospitalManagement.Models.Forgetpass
@{
    ViewBag.Title = "ForgetPassword";
    Layout = null;
}


    <head>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
        <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">
        <title>HMS - Medical & Hospital</title>
        <link rel="stylesheet" type="text/css" href="~/wwwroot/assets/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="~/wwwroot/assets/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="~/wwwroot/assets/css/style.css">

    </head>

    <body>
        @using (Html.BeginForm("Forget", "Login", new AjaxOptions { HttpMethod = "POST", OnSuccess = "SuccessMethod" }))
        {
             var im = System.Configuration.ConfigurationManager.AppSettings["gethosdefaultimg"] + "default_hplogo.png";
            @Html.AntiForgeryToken()
            <div class="main-wrapper account-wrapper">
                <div class="account-page">
                    <div class="account-center">
                        <div class="account-box">
                            <form class="form-signin" action="#">
                                <div class="account-logo">
                                    <a href="~/Login/Index"><img src="@im" alt=""></a>
                                </div>
                                <div class="form-group">
                                    <i class="fa fa-envelope-o" aria-hidden="true"></i>
                                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Enter Email Address", @class = "form-control requiredSelect", @autofocus = true })
                                </div>
                                <div class="form-group text-center">
                                    <button class="btn btn-primary account-btn skin-gradient-btn" type="submit">Reset Password</button>
                                </div>
                                <div class="text-center register-link">
                                    <a href="~/Login/Index">Back to Login</a>
                                </div>
                                    @if ((string)TempData["message"] == "Forget Password Sucessfully !!!")
                                    {
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <strong>Success!</strong> Forget Password SucessFully !!!.
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    }

                                    else if ((string)TempData["message"] == "Some Technically Problem Please Contact Admin !!!")
                                    {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <strong>Error!</strong> A problem has been occurred while submitting your data Please Contact Admin.
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                    }

                                    else if ((string)TempData["message"] == "Please Enter Valid Email Address !!!")
                                    {
                                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                            <strong>alert!</strong>  Please Enter Valid Email Address.
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                    }
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
        <script src="~/wwwroot/assets/js/jquery-3.2.1.min.js"></script>
        <script src="~/wwwroot/assets/js/popper.min.js"></script>
        <script src="~/wwwroot/assets/js/bootstrap.min.js"></script>
        <script src="~/wwwroot/assets/js/app.js"></script>
        <script src="~/wwwroot/assets/js/jquery.validate.min.js"></script>
        <script src="~/wwwroot/assets/js/jquery.validate.unobtrusive.js"></script>
       
    </body>
