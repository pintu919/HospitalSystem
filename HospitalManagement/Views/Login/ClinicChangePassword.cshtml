@model  HospitalManagement.Models.ChangePasswordmodel
@{
    ViewBag.Title = "ClinicChangePassword";
}
<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-title">Change Password</h4>
        </div>
    </div>

    @using (Html.BeginForm("ChangePass", "Login"))
    {
        @Html.AntiForgeryToken()
        <div class="row patient-form m-0">
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label>Enter old Password</label>
                    @Html.ValidationMessageFor(model => model.oldPwd, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(model => model.oldPwd, new { @class = "form-control requiredSelect", @type = "password" })
                    <i class="fa fa-lock"></i>
                </div>
            </div>
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label>Enter new Password</label>
                    @Html.ValidationMessageFor(model => model.newPwd, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(model => model.newPwd, new { @class = "form-control requiredSelect", @type = "password" })
                    <i class="fa fa-lock"></i>
                </div>
            </div>
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label>Enter confirm Password</label>
                    @Html.ValidationMessageFor(model => model.ConfPwd, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(model => model.ConfPwd, new { @class = "form-control requiredSelect", @type = "password" })
                    <i class="fa fa-lock"></i>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="form-group">
                    <button type="submit" class="btn skin-gradient-btn submit-btn">Update Password</button>
                </div>
            </div>




            @if ((string)TempData["message"] == "Please Enter Valid Old Password !!!")
            {
                <div class="card-box">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Wronrg!</strong> Your <a href="#" class="alert-link">Data</a> Please Enter Valid Old Password !!!
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            }

            else if ((string)TempData["message"] == "Username And Password Send To Email Address")
            {
                <div class="card-box">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Success!</strong> Your <a href="#" class="alert-link">Data</a> password Change Sucessfully Please check your Valid mail address.
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            }

            else if ((string)TempData["message"] == "Error When Send Email Address")
            {
                <div class="card-box">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Wronrg!</strong> Your <a href="#" class="alert-link">Data</a> Error When Send Email Address. Please Contact Admin.
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            }

            else if ((string)TempData["message"] == "Some Technically Problem Please Contact Admin !!!")
            {
                <div class="card-box">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Wronrg!</strong> Your <a href="#" class="alert-link">Data</a>Some Technically Problem Please Contact Admin !!!
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            }

        </div>
    }
</div>
